@model BookStore.Model.Admin

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Logg inn som administrator</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Brukernavn)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Brukernavn)
            @Html.ValidationMessageFor(model => model.Brukernavn)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Passord)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Passord)
            @Html.ValidationMessageFor(model => model.Passord)
        </div>

        <p>
            <input type="submit" value="Logg inn" />
        </p>
    </fieldset>
}