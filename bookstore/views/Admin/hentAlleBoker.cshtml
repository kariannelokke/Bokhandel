@model IEnumerable<BookStore.Model.Boken>

@{
    ViewBag.Title = "hentAlleBoker";
}

<h2>Alle bøker:</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tittel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pris)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sjanger)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForfatterFornavn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForfatterEtternavn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tittel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pris)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sjanger)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForfatterFornavn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForfatterEtternavn)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ISBN }) |
            @Html.ActionLink("Details", "Details", new { id=item.ISBN }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ISBN })
        </td>
    </tr>
}

</table>
